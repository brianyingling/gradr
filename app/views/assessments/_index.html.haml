.row
  .large-12.columns
    = link_to "Add Assignment", new_assessment_path, :remote=>true
.row
  .large-12.columns
    %h3 My Assignments
    %table
      %tr
        %td Name
        %td Class
        %td Period
        %td Average
      - @klasses.each do |klass|
        %h5= "#{klass.name}, #{klass.period}"
        %table
          %tr
            %td Name
            %td Class
            %td Period
            %td Average
            - klass.assessments.each do |assessment|
              %tr
                %td= link_to assessment.name, assessment, :remote=>true
                %td= assessment.average
