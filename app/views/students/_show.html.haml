.row
  .large-6.columns
    %h4= "#{@student.first_name} #{@student.last_name}"
.row
  .large-6.columns
    %h6 Roster
    %table
      %tr
        %td Class
        - @student.klasses.each do |klass|
  .large-6.columns
    %h6 Assessments
    %table
      %tr
        %td Average
        - @klass.assessments.each do |assessment|
          %tr
            %td= assessment.name
            %td= assessment.average