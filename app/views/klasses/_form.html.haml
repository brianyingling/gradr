.row
  .large-6.columns
    %h4 New Class
    = form_for @klass, :remote=>true do |f|
      = f.label       :name, nil, :class => 'form_text'
      = f.text_field  :name
      = f.label       :period, nil, :class => 'form_text'
      = f.text_field  :period
      = f.submit 'Create Class', :class => 'button tiny radius'
  .large-6.columns